<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Airbnb</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-2xl font-bold text-red-500">Airbnb Admin</h1>
          </div>
        </div>
        <div class="flex items-center">
          <a href="/" class="text-gray-600 hover:text-red-500 px-3 py-2 rounded-md text-sm font-medium">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">

    <!-- Add Home Section -->
    <div class="mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Add New Home</h3>
          <form action="/admin/add-home" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="col-span-1">
              <label class="block text-sm font-medium text-gray-700">Title</label>
              <input type="text" name="title" required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
            </div>
            <div class="col-span-1">
              <label class="block text-sm font-medium text-gray-700">Price</label>
              <input type="number" name="price" required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
            </div>
            <div class="col-span-1">
              <label class="block text-sm font-medium text-gray-700">Location</label>
              <input type="text" name="location" required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
            </div>
            <div class="col-span-1">
              <label class="block text-sm font-medium text-gray-700">Image URL</label>
              <input type="url" name="imageUrl" required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
            </div>
            <div class="col-span-2">
              <label class="block text-sm font-medium text-gray-700">Description</label>
              <textarea name="description" rows="3" required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2"></textarea>
            </div>
            <div class="col-span-2">
              <button type="submit"
                class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none">
                Add Home
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

      <!-- Manage Homes Section -->
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Manage Homes</h3>
        </div>
        <ul class="divide-y divide-gray-200 h-96 overflow-y-auto">
          <% homes.forEach(home=> { %>
            <li class="px-4 py-4 flex items-center justify-between hover:bg-gray-50">
              <div class="flex items-center">
                <img class="h-10 w-10 rounded-full object-cover mr-3" src="<%= home.imageUrl %>" alt="">
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= home.title %>
                  </p>
                  <p class="text-sm text-gray-500">$<%= home.price %> - <%= home.location %>
                  </p>
                </div>
              </div>
              <form action="/admin/delete-home" method="POST" onsubmit="return confirm('Are you sure?');">
                <input type="hidden" name="homeId" value="<%= home.id %>">
                <button type="submit" class="text-red-600 hover:text-red-900">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </li>
            <% }) %>
        </ul>
      </div>

      <!-- Manage Users Section -->
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Logged Users & Bans</h3>
        </div>
        <ul class="divide-y divide-gray-200 h-96 overflow-y-auto">
          <% users.forEach(user=> { %>
            <li class="px-4 py-4 flex items-center justify-between hover:bg-gray-50">
              <div class="flex items-center">
                <div
                  class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold mr-3">
                  <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= user.username %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= user.email %>
                  </p>
                </div>
              </div>
              <div class="flex space-x-2">
                <% if (bannedUsers.includes(user.username)) { %>
                  <form action="/admin/unban-user" method="POST">
                    <input type="hidden" name="username" value="<%= user.username %>">
                    <button type="submit"
                      class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-green-700 bg-green-100 hover:bg-green-200">
                      Unban
                    </button>
                  </form>
                  <% } else { %>
                    <form action="/admin/ban-user" method="POST" onsubmit="return confirm('Ban this user?');">
                      <input type="hidden" name="username" value="<%= user.username %>">
                      <button type="submit"
                        class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200">
                        Ban
                      </button>
                    </form>
                    <% } %>
              </div>
            </li>
            <% }) %>
              <% if(users.length===0) { %>
                <li class="px-4 py-4 text-center text-gray-500 italic">No users logged in yet.</li>
                <% } %>
        </ul>
      </div>

    </div>
  </div>

</body>

</html>